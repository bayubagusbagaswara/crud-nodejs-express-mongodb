{
  // EDITOR
  "editor.formatOnSave": true,
  "editor.lineHeight": 32,
  "editor.minimap.enabled": false,
  "editor.fontSize": 16,
  "editor.fontFamily": " 'Source Code Pro', Consolas, 'Courier New', monospace ",
  "editor.wordWrap": "on",

  // TERMINAL
  "terminal.integrated.lineHeight": 1.1,
  "terminal.integrated.fontWeight": "500",
  "editor.tokenColorCustomizations": {
    "functions": {
      "foreground": "#398be9",
      "fontStyle": "bold"
    },
    "variables": {
      "fontStyle": "italic bold"
    }
  },

  // WORKBENCH
  "workbench.colorTheme": "One Dark Pro",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorCustomizations": {
    // editor
    "editor.background": "#171717",
    "editorLineNumber.activeForeground": "#35d7dd",

    // selection highlight
    "editor.selectionHighlightBackground": "#00376b94",
    "editor.selectionBackground": "#366ea350",
    // "editor.lineHighlightBorder": "#92eafaa8",
    "editor.lineHighlightBackground": "#223d53a8",

    // tab atas
    "tab.activeBackground": "#00376b",
    "tab.hoverForeground": "#ffff",
    "scrollbarSlider.background": "#1b2230",

    // Bar kiri
    "activityBar.background": "#1b2230",
    "sideBar.background": "#171717",
    "activityBar.border": "#2b68db",
    "activityBar.activeBorder": "#2b68db",
    "activityBar.activeBackground": "#00376b",
    "activityBarBadge.background": "#16d8df9c",

    // statusBar bawah
    "statusBar.foreground": "#ffffff6c",
    "statusBar.background": "#171717",
    "statusBarItem.activeBackground": "#1b6a6d",

    // terminal bawah
    "terminal.background": "#18181a",
    "terminalCursor.foreground": "#0066ff8e",
    "terminal.ansiGreen": "#069435",
    "terminal.ansiMagenta": "#da1cda",
    "terminal.ansiYellow": "#cfc30f"
  },

  "php.suggest.basic": false,
  "php.validate.executablePath": "E:/XAMPP/php/php.exe",
  "liveServer.settings.port": 5502,
  "emmet.includeLanguages": {
    "javascript": "html"
  },

  //   COMMENTS BETTER
  "better-comments.multilineComments": true,
  "better-comments.highlightPlainText": false,
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ]
}
